  <div class="container">
    <div class="page-title">
      <h4>Notes</h4>
    </div>

    <!-- Everything Here -->
    <div class = "all_btn">
      <div class="row"> <!-- recording bar -->
        <div id="bkmkIcon">
          <a href = "#bookmarkIcon" class="modal-toggle" data-toggle="modal" data-target="#bookmarkIcon">
              <img src = "/pics/bookmark_icon.png" width = "40" height = "40">
          </a>
        </div>

        <div id="imgIcon">
          <a href = "#imageIcon" class="modal-toggle" data-toggle="modal" data-target="#imageIcon">
            <img src = "/pics/image_annotation_icon.png" width = "40" height = "40">
          </a>
        </div>

        <table id = "wrapper" cellspacing="10">
          <tr>
            <td><img src = "/pics/recording_bar.png" width = "270" height = "180" id="recordBar"></td>
          </tr>
        <tr>
          <td id ="time"><h2>5:20</h2></td> <!--recording time-->
        </tr>
        <tr>
          <td> <img src = "/pics/reminder.png" width = "275" height = "34"></td>
        </tr>
        </table>
      </div>

       <table id = "wrapper_btn"> <!-- 3/1/2018 edit --> 
        <tr> 
          <td></td>
          <td colspan = "2"></td>
          <td colspan = "3"></td>
          <td colspan = "4"></td>
          <td colspan="5">
            <a href = "#bookmark" class="modal-toggle" data-toggle="modal" data-target="#bookmark">
            <button type="button" class="btn btn-warning btn-circle btn-xl"><i class="glyphicon glyphicon-bookmark"></i></button></a>
            </td>
          <td colspan="6">
            <a href="#camera" class="modal-toggle" data-toggle="modal" data-target="#camera">
              <button type="button" class="btn btn-success btn-circle btn-xl"><i class="glyphicon glyphicon-camera"></i></button>
            </a>
          </td>
          <td colspan="7"></td>
         <td colspan="8"></td>
         <td colspan="9"></td>
         <td colspan="10"></td>
        </tr>
      </table>

      <table id= "wrapper_btn"> 
        <tr>
          <td></td>
          <td colspan = "2"></td>
          <td colspan = "3"></td>
          <td colspan = "4">
            <button type="button" id="muteButton" class="btn btn-info btn-circle btn-xl"><i class="glyphicon glyphicon-volume-up"></i></button>
            <button type="button" id="unmuteButton" class="btn btn-info btn-circle btn-xl"><i class="glyphicon glyphicon-volume-off"></i></button>
          </td>
          <td colspan="5">
            <button type="button" id="recordButton" class="btn btn-danger btn-circle btn-xl btn-record"><i class="glyphicon glyphicon-record" style="text-align: center;"></i></button>
            <button type="button" id="recordButton2" class="btn btn-danger btn-circle btn-xl"><i class="glyphicon glyphicon-stop"></i></button>
            </td>
          <td colspan="6">
            <a href = "#doneBtn" class="modal-toggle" data-toggle="modal" data-target="#doneBtn"><button type="button" id="settingsPopover" class="btn btn-default btn-lg">Done</button></a>
          <td colspan="7"></td>
         <td colspan="8"></td>
         <td colspan="9"></td>
         <td colspan="10"></td>
        </tr>
      </table>

   </div> <!-- end of current button -->

  </div>
  <!-- back button -->
  <div class = "back">
    <a href = "/folder/{{folderID}}"><img src = "/pics/arrow.png" width="55" height = "55"></a>
  </div>
  <!-- end of back button -->

  <!-- help button -->
  <div id="helpBtn">
    <a href = "#helpButton" class="modal-toggle" data-toggle="modal" data-target="#helpButton">
      <img src = "/pics/help.png" width="70" height = "70">
    </a>
  </div>
  <!-- end of help button -->

  <!-- Modal for camera -->
  <div class="modal fade" id="camera" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">Camera
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button></h5>
          
        </div>
        <div class="modal-body">
          <video id="video" width="100%" height="100%" autoplay></video>
          <button id="snap" class="btn">Snap Photo</button>
          <canvas id="canvas" style="display:none"></canvas>
          <button id="retake" class="btn" style="display:none">Retake Photo</button>
          <input type="file" accept="image/*" capture="camera" />

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="savePhoto" type="button" data-dismiss="modal" class="btn btn-primary">Save Photo</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal for bookmark -->
  <div class="modal fade" id="bookmark" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">Bookmark
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button></h5>
        </div>
        <div class="modal-body">
          <p>Added at 5:20</p>
          <input type="text" class="form-control" id="filter" value="Add a note">
          <div class="modal-footer">
            <button id="savePhoto" type="button" data-dismiss="modal" class="btn btn-primary">Save Bookmark</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal for done button -->
  <div class="modal fade" id="doneBtn" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">Finish Recording?
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button></h5>
        </div>
        <div class="modal-body">
          <p>You're about to save your note recording. You will be unable to change your audio afterward. Are you sure you want to finalize it?</p>
          <div class="modal-footer">
            <button id="savePhoto" type="button" data-dismiss="modal" class="btn btn-primary">Continue Recording</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Finalize</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal for bookmark icon -->
  <div class="modal fade" id="bookmarkIcon" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">5:20
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </h5>
          <p>Review chapters 5-7 for midterm.</p>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal for image annotation icon -->
  <div class="modal fade" id="imageIcon" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">6:30
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </h5>
          <p>Lab 2 Demo</p>
          <img src = "/pics/lec_2.jpg" width = "100" height = "100">
          <br></br>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal for help button -->
  <div class="modal fade" id="helpButton" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">Help
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button></h5>
          <img src = "/pics/bookmark_icon.png" width = "50" height = "50">
          Bookmark annotation
          
          <img src = "/pics/image_annotation_icon.png" width = "50" height = "50">
          Picture annotation
          
          <img src = "/pics/recording_bar.png" width = "80%" height = "auto">
          <p>Audio recording bar</p>

          <img src = "/pics/time.png" width = "30%" height = "auto">
          Current recording time
          <br></br>

          <i class="glyphicon glyphicon-bookmark"></i>
          Adds bookmark to current time
          <br></br>
          
          <i class="glyphicon glyphicon-camera"></i>
          Adds picture to current time
          <br></br>

          <i class="glyphicon glyphicon-volume-up"></i>
          Mutes or unmutes audio
          <br></br>

          <i class="glyphicon glyphicon-record" style="text-align: center;"></i>
          Begins or stops recording
          <br></br>

          <img src = "/pics/done.png" width = "35%" height = "auto">
          Saves recording
          <br></br>
          
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

