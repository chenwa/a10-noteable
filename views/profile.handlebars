      <!--Change Passsword-->
        <table id = "wrapper"> 
        <tr>
          <td>
            <br></br>
            <button id="myBtnCenter" class="btn btn-secondary modal-toggle" data-toggle="modal" data-target="#changePW">Change Password</button>
              <!-- The Modal -->
              <div id="myModal" class="modal">

                <!-- Within the Change PW Modal (pop-up window) -->
                <div class="modal fade" id="changePW" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <span class="close">&times;</span>
                      <br>
                      <br>
                      <!-- Current -->
                      <table id ="wrapper">
                        <tr>
                          <td>
                            <label for = "exampleInputPW">Current Password</label>
                        <input type = "password" class = "form-control" name = "password" placeholder= "Enter current password">
                           </td>
                        </tr>
                      </table>
                      <!-- New -->
                      <table id = "wrapper">
                        <tr>
                          <td>
                            <label for = "exampleInputPW">Password</label>
                            <input type = "password" class = "form-control" name = "password" placeholder= "Enter new password">
                          </td>
                        </tr>
                      </table>
                      <!-- Retype New -->
                      <table id = "wrapper">
                        <tr>
                          <td>
                            <label for = "exampleInputPW">Repeat New Password</label>
                            <input type = "password" class = "form-control" name = "password" placeholder= "Retype new password">
                          </td>
                        </tr>
                      </table>

                      <!-- Enter button -->
                      <table id = "wrapper">
                        <tr>
